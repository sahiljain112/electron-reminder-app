{
  "name": "electron-reminder-app",
  "version": "0.0.0",
  "description": "A minimalistic reminder app built using electron framework",
  "main": "bin/app.js",
  "scripts": {
    "build": "babel app.js public/js --presets babel-preset-es2015,react --out-dir bin",
    "pack": "electron-packager . reminder --platform=darwin --arch=x64 --icon=img/reminder.icns --overwrite --out=dist",
    "start": "electron .",
    "test": "npm build && xo",
    "lint": "xo --fix",
    "prepush": "npm test"
  },
  "keywords": [
    "mac",
    "reminder",
    "app",
    "timer"
  ],
  "author": "Sahil Jain <sahiljain112@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sahiljain112/electron-reminder-app.git"
  },
  "bugs": {
    "url": "https://github.com/sahiljain112/electron-reminder-app/issues"
  },
  "homepage": "https://github.com/sahiljain112/electron-reminder-app#readme",
  "dependencies": {
    "electron": "^1.4.3",
    "menubar": "^5.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.22.0",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.9.0",
    "husky": "^0.13.1",
    "spectron": "^3.4.1",
    "xo": "^0.17.1"
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "semicolon": false,
    "space": true,
    "ignores": [
      "bin/**"
    ],
    "envs": [
      "browser"
    ]
  }
}
